{
  "manifest_version": 2,
  "name": "ClipIt",
  "version": "1.0",
  "description": "This chrome extension clips the selected text on the webpage and save it over the clipboard. These clips can be saved into a text file.",
  "icons": {
    "48": "icons/clipit48.png",
    "128": "icons/clipit128.png"
  },
  "browser_action": {
    "default_icon": "icons/clipit128.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "notifications",
    "contextMenus"
  ]
}